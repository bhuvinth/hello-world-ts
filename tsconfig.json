{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  }
}
